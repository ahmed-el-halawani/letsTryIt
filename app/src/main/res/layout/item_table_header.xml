<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:weightSum="4">

    <TextView
        android:id="@+id/tvColumn1"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:background="@drawable/border_bottom_right_with_background"
        android:ellipsize="end"
        android:gravity="center"
        android:maxLines="2"
        android:paddingVertical="10dp"
        android:text="column1"
        android:textColor="#FFFFFF" />

    <TextView
        android:id="@+id/tvColumn2"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:background="@drawable/border_bottom_right_with_background"
        android:ellipsize="end"
        android:gravity="center"
        android:maxLines="2"
        android:paddingVertical="10dp"
        android:text="column2"
        android:textColor="#FFFFFF" />

    <TextView
        android:id="@+id/tvColumn3"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:background="@drawable/border_bottom_right_with_background"
        android:ellipsize="end"
        android:gravity="center"
        android:maxLines="2"
        android:paddingVertical="10dp"
        android:text="column3"
        android:textColor="#FFFFFF" />

    <TextView
        android:id="@+id/tvColumn4"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:background="@drawable/border_bottom_with_background"
        android:ellipsize="end"
        android:gravity="center"
        android:maxLines="2"
        android:paddingVertical="10dp"
        android:text="column4"
        android:textColor="#FFFFFF" />
</LinearLayout>